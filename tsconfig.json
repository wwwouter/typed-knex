{
    "compilerOptions": {
        "module": "commonjs",
        "sourceMap": false,
        "target": "ES2017",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "outDir": "build",
        "inlineSourceMap": true,
        "inlineSources": true,
        "declaration": true,
        "esModuleInterop": true,

        // Necessary for complication tests, is covered by no-unused-vars eslint rule
        "noUnusedLocals": false,
        "strict": true,
        "strictPropertyInitialization": false,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noImplicitThis": true
    },
    "include": ["src/**/*", "test/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}
